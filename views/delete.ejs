<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Delete Image</title>
        <style>
            body {
                padding: 0px;
                margin: 0px;
            }
            .container {
                padding: 1rem;
                background-color: lightblue;
                gap: 1rem;
            }

            .container form {
                display: flex;
                width: 45%;
                flex-wrap: wrap;
                padding: 1rem;
            }

            .container p,
            .container button {
                width: 100%;
            }

            .container button {
                margin-top: 60px;
                border-radius: 1rem;
                padding: 1rem;
            }

            .img {
                max-height: 150px;
                max-width: 150px;
                height: 100%;
                width: 100%;
                border: 1px solid black;
                padding: 0.5rem;
                margin: 1rem;
            }

            .holder {
                position: relative;
            }

            .holder input[type='radio'] {
                position: absolute;
                opacity: 0;
                width: 0;
                height: 0;
            }

            .holder input[type='radio']:checked + img {
                outline: 2px solid #f00;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <% if(images.length > 0) { %>
            <p>Please select the image to be deleted</p>
            <form method="post" action="/delete/image">
                <% for(let item of images) {%>
                <label class="holder">
                    <input type="radio" name="images" value="<%= item %>" />
                    <img src="<%= item %>" class="img" onclick="" />
                </label>
                <%}} else { %>
                <p>No Images found!!</p>
                <% } %> <% if(images.length > 0) { %>
                <button type="submit">Delete</button>
                <% } %>
            </form>
        </div>
    </body>
</html>
